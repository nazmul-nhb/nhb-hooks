{
  "name": "nhb-hooks",
  "version": "1.10.1",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "description": "A lightweight, tree-shakable collection of essential React hooks for common use cases.",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "default": "./dist/types.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "types": [
        "dist/index.d.ts",
        "dist/types.d.ts"
      ]
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "assets"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nazmul-nhb/nhb-hooks.git"
  },
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "build": "vite build && rollup -c",
    "lint": "node scripts/lint.mjs",
    "fix": "node scripts/fix.mjs",
    "prepublishOnly": "vite build && rollup -c",
    "commit": "node scripts/commit.mjs",
    "count": "node scripts/count.mjs",
    "test": "vitest run --coverage"
  },
  "keywords": [
    "react",
    "hooks",
    "typescript"
  ],
  "author": {
    "name": "Nazmul Hassan",
    "email": "nazmulnhb@gmail.com"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.9.0",
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    },
    "nhb-toolbox": {
      "optional": false
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.15.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/coverage-v8": "3.1.2",
    "@vitest/ui": "^3.1.2",
    "chalk": "4.1.2",
    "eslint": "^9.25.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-vitest": "^0.5.4",
    "execa": "^9.5.3",
    "globals": "^16.0.0",
    "globby": "^14.1.0",
    "jsdom": "^26.1.0",
    "nhb-toolbox": "^4.10.9",
    "prettier": "^3.5.3",
    "progress-estimator": "^0.3.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rollup": "^4.40.1",
    "rollup-plugin-dts": "^6.2.1",
    "rollup-plugin-visualizer": "^5.14.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1",
    "vite": "^6.3.3",
    "vitest": "^3.1.2"
  }
}
