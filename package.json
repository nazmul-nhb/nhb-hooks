{
  "name": "nhb-hooks",
  "version": "1.40.1",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "description": "A lightweight, tree-shakable collection of essential React hooks for common use cases.",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "default": "./dist/types.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "types": [
        "dist/types.d.ts"
      ]
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "assets"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nazmul-nhb/nhb-hooks.git"
  },
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "build": "nhb-build",
    "prepublishOnly": "vite build && rollup -c",
    "lint": "nhb-lint",
    "fix": "nhb-fix",
    "format": "nhb-format",
    "commit": "nhb-commit",
    "count": "nhb-count",
    "test": "vitest run --coverage"
  },
  "keywords": [
    "react",
    "hooks",
    "react-hooks",
    "typescript",
    "clock",
    "timer",
    "breakpoint",
