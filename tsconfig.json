{
	"compilerOptions": {
		"target": "ES2021",
		"module": "ESNext",
		"declaration": true,
		"declarationDir": "dist",
		"outDir": "dist",
		"jsx": "react-jsx",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src/index.ts", "src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["dist", "node_modules", "vite.config.ts"]
}
