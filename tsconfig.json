{
	"compilerOptions": {
		"target": "ES2021",
		"module": "ESNext",
		"declaration": true,
		"declarationDir": "dist",
		"outDir": "dist",
		"jsx": "react-jsx",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["vite/client", "node"],
		"strict": true,
		"baseUrl": "./",
		"paths": {
			"*": ["src/*"]
		},
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"allowJs": true
	},
	"include": ["vite-env.d.ts", "src"],
	"exclude": ["dist", "node_modules", "vite.config.ts"]
}
